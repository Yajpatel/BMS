<% layout('/layouts/boilerplate') %>

<body>
    <h1>All listing</h1>
    <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3">
        <% for(let i = 0;i<listings.length;i++){ %>
            <a href="http://localhost:5000/listing/<%= listings[i]._id %>" class="link">
                <div class="card" style="width: 18rem;">
                    <img src="<%= listings[i].image %>" class="card-img-top" alt="..." style="height: 200px;">
                    <div class="card-body">
                      <p class="card-text">
                        <%= listings[i].title%>
                        <br>
                        $<%= listings[i].price%>
                        <br>
                        <%= listings[i].description %>
                    </p>
                    </div>
                  </div>
            </a> 
          <% } %>
    </div>
    
